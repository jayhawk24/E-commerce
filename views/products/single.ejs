<%- include("../partials/header") %> <%- include("../partials/navbar") %>

<div class="container"><%- include('../partials/flash') %></div>

<section class="head">
    <div class="category">
        <i class="fa fa-home" aria-hidden="true"></i>
        Food / Fruit / <span> Strawberries </span>
    </div>
    <div class="delivery">
        <i class="fa fa-truck" aria-hidden="true"></i>
        Standard Shipment.
        <br />
        Free within 3-6 business days.
    </div>
</section>

<div class="mcontainer">
    <div class="product-display">
        <img src="<%= product.image%> " alt="" />

        <div class="admin">
            <a href="/product/<%= product.id %>/edit?_method=PATCH">
                <button class="btn-main">Edit</button></a
            >
            <form
                action="/product/<%= product.id %>?_method=DELETE"
                method="POST"
            >
                <input type="submit" class="btn-main" value="Delete" />
            </form>
        </div>
    </div>

    <div class="product-wrap">
        <div class="product-details">
            <h4><%= product.title %></h4>
            <p class="price">$<%= product.price %></p>
            <p class="description"><%= product.description %></p>
            <label for="quantity">Quantity: </label>
            <div class="qty">
                <input
                    type="number"
                    name="quantity"
                    value="1"
                    min="1"
                    max="10"
                />

                <button class="btn-main">Add To Cart</button>
                <i class="fa fa-heart" aria-hidden="true"></i>
            </div>
        </div>
        <div class="reviews-wrap">
            <div class="reviews-form">
                <h4 class="mt-5">Leave a Review</h4>
                <form
                    class="mb-5 row g-3 needs-validation"
                    action="/product/<%= product.id %>/review"
                    method="post"
                    novalidate
                >
                    <div class="mb-3 col-6">
                        <label for="rating" class="form-label">Rating</label>
                        <input
                            type="range"
                            class="form-range"
                            min="1"
                            max="5"
                            name="rating"
                            id="rating"
                        />
                    </div>
                    <div class="mb-3 col-12">
                        <label for="review" class="form-label">Comment </label>
                        <input
                            type="text"
                            name="review"
                            placeholder="Review"
                            class="form-control"
                            id="review"
                        />
                    </div>
                    <br />
                    <input
                        type="submit"
                        value="Submit"
                        class="mb-3 ml-3 btn btn-secondary col-3"
                    />
                </form>
            </div>
            <div class="reviews">
                <div class="card mb-5">
                    <div class="card-header">Reviews</div>
                    <% if (product.reviews.length !== 0){ %> <% for(let c of
                    product.reviews){ %>
                    <blockquote class="blockquote ml-3 mb-3">
                        <div class="row mr-2">
                            <p class="col-6"><%= c.review %></p>
                            <p class="col-6 text-right rating">
                                <% for(let i=0; i < 5;i++){ if(c.rating){
                                c.rating--; %>
                                <i class="fa fa-star"></i>
                                <% }else{ %>
                                <i class="fa fa-star-o"></i>
                                <% }} %>
                            </p>
                        </div>
                        <div class="blockquote-footer">
                            <cite title="Source Title"><%= c.user %></cite>
                        </div>
                    </blockquote>
                    <% } %> <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
