<%- include("../partials/header") %> <%- include("../partials/navbar") %>
<link rel="stylesheet" href="/css/app.css" />

<div class="mcontainer">
    <h1 class="edit">New Product</h1>

    <form
        method="post"
        action="/products/new"
        class="row g-3 needs-validation"
        novalidate
    >
        <div class="mb-3 col-6">
            <label for="title" class="form-label">Title</label>
            <input
                type="text"
                name="product[title]"
                placeholder="Title"
                class="form-control"
                id="title"
                required
            />
        </div>
        <br /><br />

        <div class="mb-3 col-6">
            <label for="title" class="form-label">Price</label>
            <input
                type="number"
                name="product[price]"
                placeholder="&#8377;"
                class="form-control"
                id="number"
                required
            />
        </div>
        <br /><br />
        <div class="mb-3 col-12">
            <label for="image" class="form-label">Blog Image URL</label>
            <input
                type="text"
                name="product[image]"
                placeholder="Image"
                class="form-control"
                id="image"
            />
        </div>
        <br /><br />

        <div class="mb-3 col-12">
            <label for="desc" class="form-label">Description</label>
            <textarea
                name="product[description]"
                placeholder="Description"
                class="form-control"
                id="desc"
                rows="12"
                required
            ></textarea>
        </div>
        <button class="col-3 btn btn-main mb-5 ml-3" type="submit">
            Submit
        </button>
    </form>
</div>
<%- include("../partials/footer") %>
